#include <iostream>
#include <cmath>
using namespace std;

void main()
{
	//Завдання 3. Задані три опори R1, R2, R3.Обчислити
	//значення опору R0 за формулою :  R0 = 1 / R1 + 1 / R2 + 1 / R3.
	//Контрольний приклад : R1 = 2, R2 = 4, R3 = 8 R0 = 1.142857.
	double r1 = 2, r2 = 4, r3 = 8;
	double r0;
	r0 = 1 / (1 / r1 + 1 / r2 + 1 / r3);
	cout << "Value of resistance R0 according to the formula= " << r0 << endl ;
}
